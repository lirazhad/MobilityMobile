<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/standard_margin"
    app:cardCornerRadius="@dimen/cardview_corner_radius"
    app:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/list_item_cardplate_category_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/standard_padding">

        <ImageView
            android:id="@+id/taxi_list_taxi_ic_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/taxi_ic" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/taxi_list_taxi_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:maxLines="1"
            android:paddingEnd="@dimen/standard_padding"
            android:paddingStart="@dimen/standard_padding"
            android:textSize="@dimen/text_size"
            app:autoSizeMaxTextSize="@dimen/text_size"
            app:autoSizeMinTextSize="@dimen/text_size_min"
            app:autoSizeStepGranularity="@dimen/text_size_step"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/taxi_list_eta_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingEnd="@dimen/standard_padding"
            android:paddingStart="@dimen/standard_padding"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</android.support.v7.widget.CardView>